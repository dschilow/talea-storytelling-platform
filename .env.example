# Runware AI API Key
RunwareApiKey=sk-your-runware-api-key-here

# ElevenLabs API Key (for multi-voice dialogue generation)
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Clerk Authentication (if used)
CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-key
CLERK_SECRET_KEY=sk_test_your-clerk-secret

# Database URL (if required)
DATABASE_URL=postgresql://user:password@host:port/database

# Other environment variables
NODE_ENV=production
PORT=4000

# TTS routing (Backend) - CosyVoice 3 on RunPod
# Base URL of your RunPod pod HTTP endpoint (without trailing slash), e.g.:
# COSYVOICE_RUNPOD_API_URL=https://<runpod-http-endpoint>
COSYVOICE_RUNPOD_API_URL=

# RunPod gateway API key (Authorization: Bearer ...).
# For RunPod Load Balancer endpoints this is typically your RunPod API key.
COSYVOICE_RUNPOD_API_KEY=

# Optional extra app-level key forwarded as X-API-Key to your worker (/v1/tts).
# Use only if your FastAPI worker enforces COSYVOICE_API_KEY.
COSYVOICE_RUNPOD_WORKER_API_KEY=

# Endpoint path on the RunPod CosyVoice API
COSYVOICE_RUNPOD_TTS_PATH=/v1/tts

# Timeout/retry tuning for long GPU generations
COSYVOICE_RUNPOD_TIMEOUT_MS=1200000
COSYVOICE_RUNPOD_MAX_RETRIES=3
COSYVOICE_RUNPOD_RETRY_BASE_DELAY_MS=1500
COSYVOICE_REFERENCE_FETCH_TIMEOUT_MS=30000

# Optional defaults for zero-shot cloning fallback
# If no reference audio is sent by client, backend can fetch this URL.
COSYVOICE_DEFAULT_REFERENCE_AUDIO_URL=
COSYVOICE_DEFAULT_PROMPT_TEXT=
COSYVOICE_DEFAULT_EMOTION=neutral
COSYVOICE_DEFAULT_OUTPUT_FORMAT=wav

# Legacy Thorsten/Chatterbox vars (kept for rollback in backup only)
# TTS_SERVICE_URL=http://tts-service.railway.internal:8080
# CHATTERBOX_TTS_SERVICE_URL=http://tts-chatterbox-service.railway.internal:8080
# TTS_DEFAULT_PROVIDER=piper

# Optional pronunciation overrides
# Format: "Name=nahm-eh;Talea=ta-lee-ah"
CUSTOM_PRONUNCIATIONS=

# Optional character voice overrides
# Format: "emma=1.08,0.02,0.03;leo=0.94,-0.01,-0.02"
# value schema: length_multiplier,noise_delta,noise_w_delta
CHARACTER_VOICE_PROFILES=
