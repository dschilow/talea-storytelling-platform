# Runware AI API Key
RunwareApiKey=sk-your-runware-api-key-here

# ElevenLabs API Key (for multi-voice dialogue generation)
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Clerk Authentication (wenn verwendet)
CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-key
CLERK_SECRET_KEY=sk_test_your-clerk-secret

# Database URL (falls erforderlich)
DATABASE_URL=postgresql://user:password@host:port/database

# Other environment variables
NODE_ENV=production
PORT=4000

# TTS routing (Backend)
# Piper/Thorsten (bestehend)
TTS_SERVICE_URL=http://tts-service.railway.internal:8080

# Optional: zweiter Service fÃ¼r A/B-Vergleich (Chatterbox)
CHATTERBOX_TTS_SERVICE_URL=http://tts-chatterbox-service.railway.internal:8080

# Optional: globaler Default-Provider, wenn Request keinen `provider` mitsendet
# Werte: piper | chatterbox
TTS_DEFAULT_PROVIDER=piper

# Piper synthesis tuning (backend -> piper service)
PIPER_LENGTH_SCALE=1.36
PIPER_NOISE_SCALE=0.44
PIPER_NOISE_W=0.54

# Optional chatterbox synthesis tuning (backend -> chatterbox service)
CHATTERBOX_LENGTH_SCALE=1.35
CHATTERBOX_NOISE_SCALE=0.55
CHATTERBOX_NOISE_W=0.65

# Chatterbox service defaults (im tts-chatterbox-service)
CHATTERBOX_MODEL=multilingual
CHATTERBOX_DEVICE=cpu
CHATTERBOX_DEFAULT_LANGUAGE=de

# Piper service quality profile (set in tts-service env vars)
PIPER_QUALITY_MODE=max
MAX_PARALLEL_PIPER=2
MAX_CHUNK_CHARS=560
MAX_SENTENCES_PER_CHUNK=1
DEFAULT_LENGTH_SCALE=1.38
DEFAULT_NOISE_SCALE=0.44
DEFAULT_NOISE_W=0.54
SILENCE_PERIOD_MS=380
SILENCE_QUESTION_MS=500
SILENCE_EXCLAIM_MS=450
SILENCE_COMMA_MS=260
SILENCE_DIALOGUE_MS=520
SILENCE_SCENE_MS=700

# Advanced Piper expressiveness
ENABLE_DYNAMIC_CHUNK_TUNING=true
ENABLE_CHARACTER_VOICE_VARIATION=true
ENABLE_EMOTION_VARIATION=true
ENABLE_OUTPUT_NORMALIZATION=true
DEBUG_TTS_PROSODY=false
OUTPUT_TARGET_PEAK=0.93
OUTPUT_EDGE_FADE_MS=6
ENABLE_PROSODY_SMOOTHING=true
MAX_LENGTH_SCALE_STEP=0.12
MAX_NOISE_SCALE_STEP=0.08
MAX_NOISE_W_STEP=0.08
MIN_LENGTH_SCALE=1.02
MAX_LENGTH_SCALE=1.95
MIN_RELATIVE_LENGTH_MULT=0.98
MAX_RELATIVE_LENGTH_MULT=1.18

# Optional pronunciation overrides
# Format: "Name=nahm-eh;Talea=ta-lee-ah"
CUSTOM_PRONUNCIATIONS=

# Optional character voice overrides
# Format: "emma=1.08,0.02,0.03;leo=0.94,-0.01,-0.02"
# value schema: length_multiplier,noise_delta,noise_w_delta
CHARACTER_VOICE_PROFILES=
