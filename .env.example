# Runware AI API Key
RunwareApiKey=sk-your-runware-api-key-here

# ElevenLabs API Key (for multi-voice dialogue generation)
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Clerk Authentication (wenn verwendet)
CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-key
CLERK_SECRET_KEY=sk_test_your-clerk-secret

# Database URL (falls erforderlich)
DATABASE_URL=postgresql://user:password@host:port/database

# Other environment variables
NODE_ENV=production
PORT=4000

# TTS routing (Backend)
# Piper/Thorsten (bestehend)
TTS_SERVICE_URL=http://tts-service.railway.internal:8080

# Optional: zweiter Service f√ºr A/B-Vergleich (Chatterbox)
CHATTERBOX_TTS_SERVICE_URL=http://tts-chatterbox-service.railway.internal:8080

# Optional: globaler Default-Provider, wenn Request keinen `provider` mitsendet
# Werte: piper | chatterbox
TTS_DEFAULT_PROVIDER=piper

# Chatterbox service defaults (im tts-chatterbox-service)
CHATTERBOX_MODEL=multilingual
CHATTERBOX_DEVICE=cpu
CHATTERBOX_DEFAULT_LANGUAGE=de
