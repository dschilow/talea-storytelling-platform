{
  "$schema": "https://encore.dev/schemas/infra.schema.json",
  "sql_servers": [
    {
      "host": "postgres.railway.internal:5432",
      "tls_config": {
        "disable_ca_validation": true
      },
      "databases": {
        "user": {
          "name": "railway",
          "username": "postgres",
          "password": {
            "$env": "PGPASSWORD"
          }
        },
        "avatar": {
          "name": "railway",
          "username": "postgres",
          "password": {
            "$env": "PGPASSWORD"
          }
        },
        "story": {
          "name": "railway",
          "username": "postgres",
          "password": {
            "$env": "PGPASSWORD"
          }
        },
        "doku": {
          "name": "railway",
          "username": "postgres",
          "password": {
            "$env": "PGPASSWORD"
          }
        },
        "personality_tracking": {
          "name": "railway",
          "username": "postgres",
          "password": {
            "$env": "PGPASSWORD"
          }
        }
      }
    }
  ],
  "pubsub": [
    {
      "type": "nsq",
      "hosts": "nsq.railway.internal:4150",
      "topics": {
        "log-events": {
          "name": "log-events",
          "subscriptions": {
            "log-to-console": {
              "name": "log-to-console"
            }
          }
        }
      }
    }
  ],
  "secrets": {
    "ClerkSecretKey": {
      "$env": "CLERK_SECRET_KEY"
    },
    "OpenAIAPIKey": {
      "$env": "OPENAI_API_KEY"
    },
    "RunwareAPIKey": {
      "$env": "RUNWARE_API_KEY"
    }
  }
}
