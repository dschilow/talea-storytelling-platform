{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && bun install && bun run build && cd .. && bun install"
  },
  "deploy": {
    "startCommand": "cd backend && encore run --port=4000",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100
  }
}